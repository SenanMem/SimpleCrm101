<UserControl x:Class="SimpleCrm101.Companents.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleCrm101.Companents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Name="FontStylePswBox"
               TargetType="PasswordBox">
            <Setter Property="FontSize" Value="40"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontStyle" Value="Italic"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="#D4AF37"></Setter>
            <Setter Property="Background" Value="Black"></Setter>
        </Style>
    </UserControl.Resources>
    <PasswordBox x:Name="passwordBox"  MaxLength="64" PasswordChar="*" PasswordChanged="PasswordBox_PasswordChanged" ></PasswordBox>
</UserControl>
